{
  "name": "Title Downloader",
  "description": "Скачивание названия текущей и предыдущей песни в текстовый файл для отображения в OBS",
  "version": "5.7",
  "manifest_version": 3,

  "permissions": ["activeTab", "scripting", "downloads", "tabs", "storage"],

  "host_permissions": [
    "*://vk.com/*",
    "*://music.yandex.ru/*",
    "*://music.yandex.com/*",
    "*://www.youtube.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },

  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  },

  "background": {
    "service_worker": "bg.js"
  }
}
